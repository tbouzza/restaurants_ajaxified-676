<div class="container">
  <h1>Restaurants</h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to restaurant.name,
                restaurant_path(restaurant)
        %>

        <%= link_to 'Delete',restaurant_path(restaurant),
                method: :delete,
                remote: true,
                data: { confirm: "Are you sure ?"}
        %>
      </li>
    <% end %>
  </ul>
</div>
